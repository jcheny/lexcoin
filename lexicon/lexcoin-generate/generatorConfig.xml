<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MysqlContext" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.lexcoin.invariable.MyMapper"/>
        </plugin>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/lexcoin?characterEncoding=utf8"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <!-- 对于生成的pojo所在包 -->
        <javaModelGenerator targetPackage="com.lexcoin.pojo" targetProject="C:\Users\Administrator\Desktop\新建文件夹\lexicon\lexcoin-generate\src\main\java"/>

<!--        &lt;!&ndash; 对于生成的mapper所在目录 &ndash;&gt;-->
        <sqlMapGenerator targetPackage="mapper" targetProject="C:\Users\Administrator\Desktop\新建文件夹\lexicon\lexcoin-generate\src\main\resources"/>

<!--         配置mapper对应的java映射 -->
        <javaClientGenerator targetPackage="com.lexcoin.mapper" targetProject="C:\Users\Administrator\Desktop\新建文件夹\lexicon\lexcoin-generate\src\main\java"
                             type="XMLMAPPER"/>


        <table tableName="user"></table>

    </context>
</generatorConfiguration>